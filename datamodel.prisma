type User {
  username: String! @unique
  password: String!
  name: String!
  campus: String
  department: String
  dob: DateTime
  email: String!
  level: Int!
  id: ID! @id
  courses: [CourseInstance] @relation(link: INLINE, name: "UserCourseRelation")
  reports: [Report] @relation(link: INLINE, name: "ProblemReportRelation")
}
type Report {
  id: ID! @id
  title: String!
  description: String!
  status: Int!
}
type CourseInstance {
  id: ID! @id
  questions: [Link]!
  completed: Int!
  total: Int!
  course: String!
}
type Link @embedded {
  id: String!
  status: Int!
}
type Global {
  regs: Boolean @default(value: true)
  regf: Boolean @default(value: true)
  id: String! @default(value: "global") @unique
  _id: ID! @id
}
type Tag @embedded {
  name: String!
  id: String!
}
type Campus {
  id: ID! @id @unique
  admin_id: String!
  departments: [Tag]
  name: String! @unique
}
type Branch {
  id: ID! @id
  name: String! @unique
}
type Course {
  id: ID! @id
  branch: String!
  coordinator_id: String!
  name: String! @unique
}
type Question {
  id: ID! @id
  course: String!
  name: String!
  desc: String!
  exp: String!
  opt: Options!
  ans: String!
}
type Options @embedded {
  a: String!
  b: String!
  c: String!
  d: String!
}
